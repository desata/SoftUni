@using ASP.NET_Core_SimplePages.Models.Product;

@model IEnumerable<ProductViewModel>
@{
    string keyword = ViewBag.keyword;
    ViewBag.Title = "All Products";
}

<div class="card" style="width: 18rem">
    <div class="card-header px-3">@ViewBag.Title</div>
    <ul class="list-group list-group-light list-group-small">
        @foreach (var product in Model)
        {
            <li class="list-group-item">
                N.@product.Id: @product.Name - $@product.Price
            </li>
        }
    </ul>
</div>

<div class="d-flex align-items-start">
    <form>
        <div class="input-group">
            <input name="keyword" id="keyword" class="form-control rounded" />
            <button type="submit" for="keyword" class="btn btn-outline-primary">Search</button>
        </div>
    </form>
</div>